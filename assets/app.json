              "required": [
                "code",
                "link",
                "name"
              ],
              "properties": {
                "code": {
                  "type": "string",
                  "title": "Slug do intermediador",
                },
                "link": {
                  "type": "string",
                  "title": "Link do Intermediador",
                  "format": "uri",
