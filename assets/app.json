                },
                "name": {
                  "type:": "string",
                  "title": "Nome do intermediador",
                  "description": "Escreva o nome do intermediador que esteja utilizando. Exemplo: wirecard"
                }
              }
            },
            "icon": {
              "type": "string",
              "title": "Ícone do intermediador",
              "format": "uri",
              "description": "Insira a URL do ícone ou a imagem que irá representar a forma de pagamento no checkout. Sugere-se inserir o logotipo do intermediador de pagamento"
            },
            "url": {
              "type": "string",
              "title": "URL da Forma de Pagamento",
              "description": "URL da forma de pagamento. Exemplo: https://www.wiredcard.com.br/payment",
              "format": "uri"
            }
          }
        }
      },
