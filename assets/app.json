                  },
                  "tax_value": {
                    "type": "integer",
                    "title": "Valor da taxa",
                    "default": 0,
                    "description": "Insira o valor da taxa do parcelamento"
                  }
                }
              }
            },
            "intermediator": {
              "type": "object",
